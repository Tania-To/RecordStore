@page
@model RecordStore.Pages.Associate.EditAssociateModel
@{
}
<form method="post">
    <input hidden asp-for="Associate.AssociateID" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit Record</h2>
			<hr />
         </div>

    <div class="mb-3">
			<label asp-for="Associate.FirstName">First Name</label>
			<input asp-for="Associate.FirstName" class="form-control" required/>
		</div>
    <div class="form-group">
        <label asp-for="Associate.LastName">Last Name</label>
		<input asp-for="Associate.LastName" class="form-control" required/>
    </div>

    <div class="form-group">
       <label asp-for="Associate.HourlyRate">Hourly Rate</label>
	   <input asp-for="Associate.HourlyRate" class="form-control" required/>
    </div>
    <div class="form-group">
       <label asp-for="Associate.SSN">SSN</label>
	   <input asp-for="Associate.SSN" class="form-control" required />
    </div>
     <div class="form-group">
       <label asp-for="Associate.DoB">Date of Birth</label>
	   <input asp-for="Associate.DoB" class="form-control" required/>
    </div>

     <div class="form-group">
       <label asp-for="Associate.StoreID">StoreId</label>
	   <input asp-for="Associate.StoreID" class="form-control" required/>
    </div><br />
    <div class="form-group">
       <label asp-for="Associate.Email">Email</label>
	   <input asp-for="Associate.Email" class="form-control" required/>
    </div><br />
    <div class="form-group">
       <label asp-for="Associate.Password">Password</label>
	   <input asp-for="Associate.Password" class="form-control" required/>
    </div><br />
    
    <button type="submit" class="btn btn-primary" style="width:150px;">Edit</button>
    <a asp-page="Associates" class="btn btn-secondary" style="width:150px;">Cancel</a>
  
    </div>
</form>

    
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}