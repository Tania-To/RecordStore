@page
@model RecordStore.Pages.Manager.DeleteManagerModel
@{
}
<form method="post">
     <input hidden asp-for="Manager.ManagerID" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Manager</h2>
			<hr />
         </div>

    <div class="mb-3">
			<label asp-for="Manager.FirstName">First Name</label>
			<input asp-for="Manager.FirstName" disabled class="form-control" required/>
		</div>
    <div class="form-group">
        <label asp-for="Manager.LastName">Last Name</label>
		<input asp-for="Manager.LastName" disabled class="form-control" required/>
    </div>

    <div class="form-group">
       <label asp-for="Manager.Salary">Salary</label>
	   <input asp-for="Manager.Salary" disabled class="form-control" required/>
    </div>
    <div class="form-group">
       <label asp-for="Manager.SSN">SSN</label>
	   <input asp-for="Manager.SSN" disabled class="form-control" required />
    </div>
     <div class="form-group">
       <label asp-for="Manager.DoB">Date of Birth</label>
	   <input asp-for="Manager.DoB" disabled class="form-control" required/>
    </div>

     <div class="form-group">
       <label asp-for="Manager.StoreID">StoreId</label>
	   <input asp-for="Manager.StoreID" disabled class="form-control" required/>
    </div><br />
    <div class="form-group">
       <label asp-for="Manager.Email">Email</label>
	   <input asp-for="Manager.Email" disabled class="form-control" required/>
    </div><br />
    <div class="form-group">
       <label asp-for="Manager.Password">Password</label>
	   <input asp-for="Manager.Password" disabled class="form-control" required/>
    </div><br />
    
    <button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
    <a asp-page="Managers" class="btn btn-secondary" style="width:150px;">Cancel</a>
  
    </div>
</form>

    
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}