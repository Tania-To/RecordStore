@page
@model RecordStore.Pages.Manager.AddManagerModel
@{
}
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">New Manager</h2>
			<hr />
         </div>

    <div class="mb-3">
			<label asp-for="Manager.FirstName">First Name</label>
			<input asp-for="Manager.FirstName" class="form-control" required/>
		</div>
    <div class="form-group">
        <label asp-for="Manager.LastName">Last Name</label>
		<input asp-for="Manager.LastName" class="form-control" required/>
    </div>

    <div class="form-group">
       <label asp-for="Manager.Salary">Salary</label>
	   <input asp-for="Manager.Salary" class="form-control" required/>
    </div>
    <div class="form-group">
       <label asp-for="Manager.SSN">SSN</label>
	   <input asp-for="Manager.SSN" class="form-control"  required/>
    </div>
     <div class="form-group">
       <label asp-for="Manager.DoB">Date of Birth</label>
	   <input asp-for="Manager.DoB" class="form-control" required/>
    </div>

     <div class="form-group">
       <label asp-for="Manager.StoreID">StoreId</label>
	   <input asp-for="Manager.StoreID" class="form-control"  required/>
    </div><br />
    <div class="form-group">
       <label asp-for="Manager.Email">Email</label>
	   <input asp-for="Manager.Email" class="form-control" required/>
    </div><br />
    <div class="form-group">
       <label asp-for="Manager.Password">Password</label>
	   <input asp-for="Manager.Password" class="form-control"  required/>
    </div><br />
    <button type="submit" class="btn btn-primary" style="width:150px;">Add</button>
    <a asp-page="Managers" class="btn btn-secondary" style="width:150px;">Cancel</a>
  
    </div>
</form>

    
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}